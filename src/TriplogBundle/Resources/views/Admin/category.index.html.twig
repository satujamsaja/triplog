{% block title %}Triplog Admin{% endblock %}
{% extends 'admin.base.html.twig' %}
{% block sidebar %}
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('admin_trip_list') }}"><i class="fa fa-plane" aria-hidden="true"></i> Trips</a></li>
        <li class="active"><a href="{{ path('admin_trip_categories_list') }}"><i class="fa fa-list-ul" aria-hidden="true"></i> Categories</a></li>
        <li><a href="{{ path('admin_trip_locations_list') }}"><i class="fa fa-map-marker" aria-hidden="true"></i> Locations</a></li>
        <li><a href="{{ path('admin_trip_user_list') }}"><i class="fa fa-users" aria-hidden="true"></i> Users</a></li>
    </ul>
{% endblock %}
{% block body %}
    <div class="breacrumb-wrapper">
        <ol class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="{{ path('admin_trip_categories_list') }}">Categories</a></li>
            <li>List</li>
        </ol>
    </div>
    <div class="action-links clearfix">
        <a href="{{ path('admin_category_new') }}" class="btn btn-success btn-small pull-right"><i class="fa fa-plus-square" aria-hidden="true"></i> Add Category</a>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Trip category list</div>
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Photo</th>
                <th>Name</th>
                <th>Created At</th>
                <th>Operations</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{% if category.tripCatImage %}<img width="50" height="50" src="{{ asset('uploads/images/') }}{{  category.tripCatImage }}">{% endif %}
                </td>
                <td>{{ category.tripCatname }}</td>
                <td>{{ category.createdAt | date("Y-m-d H:i:s") }}</td>
                <td>
                    <a href="{{ path('admin_category_edit', { "id" : category.id }) }}" class="btn btn-primary"><i class="fa fa-pencil-square" aria-hidden="true"></i> Edit</a>
                    <a href="{{ path('admin_category_delete', { "id" : category.id }) }}" class="btn btn-danger"><i class="fa fa-minus-square" aria-hidden="true"></i> Delete</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
